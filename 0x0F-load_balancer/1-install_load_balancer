#!/usr/bin/env bash
# Install and set up HAProxy

# Install required software
apt-get update
apt-get install -y software-properties-common

# Add the HAProxy PPA and update the package list
add-apt-repository -y ppa:vbernat/haproxy-2.4
apt-get -y update

# Install HAProxy with the specified version
apt-get install -y haproxy=2.4.25-1ppa1~focal

# Enable HAProxy to start on boot
echo "ENABLED=1" > /etc/default/haproxy

# Configure HAProxy
echo "
   frontend load_balancer
   bind *:80
   mode http
   default_backend servers

   backend servers
   balance roundrobin
   option httpclose
   option forwardfor
   server 448078-web-01 100.26.159.155:80 check
   server 448078-web-02 100.26.122.170:80 check
" >> /etc/haproxy/haproxy.cfg

# Restart HAProxy to apply the changes
service haproxy restart

